@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <div class="title">
        <h1 style="text-align: center; font-family:Arial; font-size:30px;">
            Welcome to Yaz Bilgi Intern System!
        </h1>
    </div>
    <div class="logo">
        <img src="~/images/yaz.jpg" />
    </div>

    <form asp-action="Index" asp-controller="Home" method="post">
        <div class="input-box">
            <input  type="email" name="email" placeholder="Email" required />
            <div class="underline"></div>
        </div>
        <div class="input-box">
            <input type="password" name="password" placeholder="Password" required />
            <div class="underline"></div>
        </div>
        <div style="text-align:center" class="input-box">
            <input type="submit" value="Enter" />
        </div>
    </form>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" style="text-align:center; margin-top: 10px;">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="register-link">
        <p style="text-align:center">
            Don't have an account?
            <a asp-controller="Home" asp-action="Register">Register</a>
        </p>
    </div>
</div>



